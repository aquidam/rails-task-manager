<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? 'completed!' : 'Still to do...'%></p>

<%= link_to 'Update task', edit_path %>
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

